<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="100dp"
    android:layout_height="100dp"
    >

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text = "Bolton Stretch"
        android:textColor="#0000"
        android:textSize="20sp"
        android:background="@drawable/yonder"
        android:alpha=".60"
        android:id="@+id/suggestedAlbumArt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bolton Stretch"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="10sp"
        android:layout_marginBottom="20dp"
        android:id="@+id/suggestedSongName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "100"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="10sp"
        android:id="@+id/suggestedSongScore"/>




</FrameLayout>